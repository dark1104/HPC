# User specific aliases and functions

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Source global definitions
if [ -f /etc/bashrc ]; then
    source /etc/bashrc
fi

# Path and environment
export PATH=/usr/share/logstash/bin/:$PATH
export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH

# Kube-related settings
export KUBECONFIG=/etc/rancher/k3s/k3s.yaml
alias kubectl='/usr/local/bin/k3s kubectl'

# Bash completion (optional, make sure these paths exist)
[ -f /usr/share/bash-completion/bash_completion ] && source /usr/share/bash-completion/bash_completion
[ -f /etc/bash_completion.d/kubectl ] && source /etc/bash_completion.d/kubectl

# Final Kubeconfig path (override)
export KUBECONFIG=/root/.kube/config

# Hugging Face Token
export HUGGINGFACE_HUB_TOKEN=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
